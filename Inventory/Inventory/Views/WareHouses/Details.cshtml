<form action="/Articles/Search" method="get">
    <input type="text" name="searchstring" />
    <input type="hidden" name="id" value="@Model.ID" />
    <input type="submit" value="Filter" />
</form>

<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            Photo
        </th>
        <th>
            Number
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.ArticleInStorageCounters)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Articles.Name)
        </td>
        <td>
            <img width="200" height="150" src="
                 @Html.DisplayFor(model => item.Articles.base64)
            "/>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ArticleCounter)
        </td>
    </tr>
    }

</table>